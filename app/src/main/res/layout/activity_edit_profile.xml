<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile.EditProfileActivity">
    <LinearLayout
        android:padding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/edit_profile_image"
            android:layout_width="157dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/user"
            app:shapeAppearanceOverlay="@style/profileImg" />

        <TextView
            android:id="@+id/edit_profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textColor="@color/white"
            android:text=""
            android:textSize="16sp">

        </TextView>

        <TextView
            android:id="@+id/edit_profile_serial_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textColor="@color/white"
            android:text=""
            android:textSize="14sp">

        </TextView>

        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5sp"
            android:backgroundTint="@color/white"
            style="@style/Divider.EditProfile"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_person_24"
            app:endIconMode="clear_text"
            app:startIconTint="@color/white"
            app:boxBackgroundColor="@color/alpha_misty_rose"
            style="@style/CustomOutlineBox"
            android:theme="@style/CustomOutlineBox"
            app:boxStrokeColor="@color/white"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_profile_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="First Name"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_person_24"
            app:endIconMode="clear_text"
            app:startIconTint="@color/white"
            app:boxBackgroundColor="@color/alpha_misty_rose"
            style="@style/CustomOutlineBox"
            android:theme="@style/CustomOutlineBox"
            app:boxStrokeColor="@color/white"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_profile_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Last Name"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_calendar_today_24"
            app:endIconMode="clear_text"
            app:startIconTint="@color/white"
            app:boxBackgroundColor="@color/alpha_misty_rose"
            style="@style/CustomOutlineBox"
            android:theme="@style/CustomOutlineBox"
            app:boxStrokeColor="@color/white"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_profile_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Birthday"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_phone_24"
            app:endIconMode="clear_text"
            app:startIconTint="@color/white"
            app:boxBackgroundColor="@color/alpha_misty_rose"
            style="@style/CustomOutlineBox"
            android:theme="@style/CustomOutlineBox"
            app:boxStrokeColor="@color/white"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_profile_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Phone"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_home_24"
            app:endIconMode="clear_text"
            app:startIconTint="@color/white"
            app:endIconTint="@color/white"
            app:boxBackgroundColor="@color/alpha_misty_rose"
            android:textColorHint="@color/white"
            style="@style/CustomOutlineBox"
            android:theme="@style/CustomOutlineBox"
            app:boxStrokeColor="@color/white"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_profile_address"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="EDIT"
            android:textColor="@color/white"
            android:backgroundTint="@color/alpha_misty_rose"
            android:textSize="18sp"
            app:cornerRadius="10dp" />


    </LinearLayout>
</ScrollView>